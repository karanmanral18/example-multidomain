{
  "name": "Frontend Workspace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20", // or node:18 etc.
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "forwardPorts": [5173, 3000, 8080], // For Vite, Next.js, etc.
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ]
    }
  }
}
